fun main()
{
var num:Int =0
var result : Int= 1
  print("Enter number to find factorial = ")
  num= readLine()!!.toInt()
  if(num==0)
  {
   print("Factorial is = 1")
   return 
  }
  
  if(num>0)
  {
  for(i in 1..num)
  {
    
    result*=i
  }
  }
  else 
  {
 
  for(i in num..-1)
  {
    result*=i
  }
  
  }
  println("Factorial = $result" )
}
